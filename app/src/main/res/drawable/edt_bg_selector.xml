<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/edt_bg_selected" android:state_focused="true"/>
    <item android:drawable="@drawable/edt_bg_normal" android:state_focused="false"/>
    <item android:color="@drawable/edt_bg_normal" android:state_enabled="false" />
    <item android:color="@drawable/edt_bg_selected" android:state_selected="true" /> <!-- selected -->
    <item android:color="@drawable/edt_bg_selected" android:state_pressed="true" /> <!-- pressed -->
    <item android:color="@drawable/edt_bg_selected" android:state_focused="true" /> <!-- focused -->
    <item android:color="@drawable/edt_bg_selected" android:state_checked="true" /> <!-- checked -->
    <item android:color="@drawable/edt_bg_normal" android:state_enabled="true" /> <!-- idle state -->
</selector>