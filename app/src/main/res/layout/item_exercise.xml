<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_smit_fit"
    android:layout_width="@dimen/_87sdp"
    android:layout_height="@dimen/_117sdp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_feature"
        android:layout_width="@dimen/_83sdp"
        android:layout_height="@dimen/_73sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:visibility="visible"
        android:src="@drawable/meditation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_feature"
        style="@style/VivantTitle"
        android:layout_width="@dimen/_69sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Meditation"
        android:textColor="@color/primary2"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_feature" />

</androidx.constraintlayout.widget.ConstraintLayout>
