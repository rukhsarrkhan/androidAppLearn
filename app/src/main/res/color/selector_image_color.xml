<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/colorPrimary" android:state_enabled="false" />
    <item android:color="@color/vivantGreen" android:state_selected="true" /> <!-- selected -->
    <item android:color="@color/vivantGreen" android:state_pressed="true" /> <!-- pressed -->
    <item android:color="@color/vivantGreen" android:state_focused="true" /> <!-- focused -->
    <item android:color="@color/vivantGreen" android:state_checked="true" /> <!-- checked -->
    <item android:color="@color/colorPrimary" android:state_enabled="true" /> <!-- idle state -->

</selector>